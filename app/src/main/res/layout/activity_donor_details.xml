<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgBank"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/blood_drop" />
            </LinearLayout>


            <TextView
                android:id="@+id/user_donor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Hamza Shurut"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/user_donor_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="hamza@gmail.com"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red_light"
                android:padding="10dp"
                android:text="Basic Information"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@android:color/background_light" />

            <LinearLayout
                android:id="@+id/gen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Gender:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#220D0D" />

                <TextView
                    android:id="@+id/user_donor_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Male"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bloodgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bloodgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Blood Group:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#220D0D" />


                <TextView
                    android:id="@+id/user_donor_bloodgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="A+"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/red_light"
                android:padding="10dp"
                android:text="Contact Information"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@android:color/background_light" />


            <LinearLayout
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Contact:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#220D0D" />

                <TextView
                    android:id="@+id/user_donor_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="+254"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Address:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#220D0D" />


                <TextView
                    android:id="@+id/user_donor_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Mombasa"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Tv_Availability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="Status:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#220D0D" />


                <TextView
                    android:id="@+id/user_donor_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:text="Available"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/Divider" />


        <ImageButton
            android:id="@+id/user_request_btn_donor"
            android:layout_width="85dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner"
            android:src="@drawable/ic_call" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Tap To Call"
            android:textColor="#220D0D" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>